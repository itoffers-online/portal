{% extends '@offers/base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="offset-2 col-lg-8">
            <div class="alert alert-success text-center" role="alert">
                <h4 class="alert-heading">Good job!</h4>
                <p>Your offer was just created</p>
                {% if speciailization.facebookChannel %}
                    <p>Your offer was posted on our <a href="{{ specialization.facebookChannel.groupId|fb_group_url }}" target="_blank">Facebook group</a>.</p>
                    <hr>
                {% endif %}
                <p>
                    <a class="btn btn-primary" href="{{ url('offer', {offerSlug: offer.slug}) }}">See it</a>
                </p>
                <p class="mb-0">If you have any questions please check our <a href="{{ url('faq') }}">FAQ</a> section.</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}