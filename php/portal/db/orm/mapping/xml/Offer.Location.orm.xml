<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <embeddable name="ITOffers\Offers\Application\Offer\Location">
        <field name="remote" type="boolean"/>
        <field name="countryCode" length="2" nullable="true"/>
        <field name="city" length="512" nullable="true"/>
        <field name="address" length="2048" nullable="true"/>
        <field name="lat" type="float" nullable="true"/>
        <field name="lng" type="float" nullable="true"/>
    </embeddable>
</doctrine-mapping>