{% extends '@offers/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h3>Profile</h3>
                <div class="card">
                    <div class="card-body">
                    <ul class="ml-0 pl-1">
                        <li><span data-user-email="{{ user.email }}">{{ user.email }}</span></li>
                        <li>Offers left: {{ offersLeft }}</li>
                        <li>Extra Offers: {{ extraOffersCount }}</li>
                        {% if extraOffer %}
                        <li>Expiration: {{ extraOffer.expiresAt|time_diff }}</li>
                        {% endif %}
                    </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <h3>Last 20 Offers</h3>
                <div class="card">
                    <div class="card-body">
                        {% for offer in offers %}
                            {{ include('@offers/offer/_list_entry.html.twig', {offer: offer}, false) }}
                            Received applications: {{ offer.applicationsCount }}
                            {% if not loop.last %}
                                <hr />
                            {% endif %}
                        {% else %}
                            <div class="alert alert-info">
                                <p>
                                    It looks you have not posted any offers so far. It's fine, not everyone is a recruiter after all.
                                    You can always change your mind and try to recruit people to your team, it's easy. Just be honest.
                                </p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}