<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="HireInSocial\Offers\Application\Offer\Offer" table="his_job_offer">

        <id name="id" type="guid">
            <generator strategy="NONE" />
        </id>
        <field name="emailHash" />
        <field name="userId" type="guid" />
        <field name="specializationId" type="guid" />
        <field name="createdAt" type="datetime_immutable" />
        <field name="salary" type="his_offer_salary" nullable="true"/>
        <field name="removedAt" type="datetime_immutable" nullable="true"/>

        <embedded name="locale" class="HireInSocial\Offers\Application\Offer\Locale" />
        <embedded name="company" class="HireInSocial\Offers\Application\Offer\Company" />
        <embedded name="position" class="HireInSocial\Offers\Application\Offer\Position" />
        <embedded name="location" class="HireInSocial\Offers\Application\Offer\Location" />
        <embedded name="contract" class="HireInSocial\Offers\Application\Offer\Contract" />
        <embedded name="description" class="HireInSocial\Offers\Application\Offer\Description" />
        <embedded name="contact" class="HireInSocial\Offers\Application\Offer\Contact" />
    </entity>
</doctrine-mapping>