#!/usr/bin/env php
<?php

use HireInSocial\Application\Config;
use App\Command\Specialization\CreateSpecialization;
use App\Command\Specialization\RemoveFacebookChannel;
use App\Command\Specialization\SetFacebookChannel;
use App\Command\System\PerformanceCheckCommand;
use Symfony\Component\Console\Application;
use App\Command\Offer\Test;
use function HireInSocial\Infrastructure\bootstrap;
use function HireInSocial\Infrastructure\offersFacade;

$projectRootPath = dirname(__DIR__);

require $projectRootPath . '/src/autoload.php';

$config = bootstrap($projectRootPath);

$offers = offersFacade($config);

$application = new Application('Hire in Social');

$application->add(new Test\PostOffer($offers, $config->getString(Config::LOCALE)));
$application->add(new CreateSpecialization($offers));
$application->add(new SetFacebookChannel($offers));
$application->add(new RemoveFacebookChannel($offers));
$application->add(new PerformanceCheckCommand($offers, $config));

$application->run();
