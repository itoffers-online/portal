#!/usr/bin/env php
<?php

use HireInSocial\Application\Config;
use HireInSocial\UserInterface\Symfony\Command\Specialization\CreateSpecialization;
use HireInSocial\UserInterface\Symfony\Command\Specialization\RemoveFacebookChannel;
use HireInSocial\UserInterface\Symfony\Command\Specialization\SetFacebookChannel;
use HireInSocial\UserInterface\Symfony\Command\System\PerformanceCheckCommand;
use Symfony\Component\Console\Application;
use HireInSocial\UserInterface\Symfony\Command\Offer\Test\PostOffer;

$projectRootPath = dirname(__DIR__);

require $projectRootPath . '/src/autoload.php';

$config = \HireInSocial\bootstrap($projectRootPath);

$system = \HireInSocial\system($config);

$application = new Application('Hire in Social');

$application->add(new PostOffer($system, $config->getString(Config::LOCALE)));
$application->add(new CreateSpecialization($system));
$application->add(new SetFacebookChannel($system));
$application->add(new RemoveFacebookChannel($system));
$application->add(new PerformanceCheckCommand($system, $config));

$application->run();
